 <div class="d-none mt-3 container" data-friends-target="requests">
  <h2>Requests</h2>
    <div>
      <% @myrequests.each do |request| %>
      <div class="d-flex mb-3">
        <div class="flex-grow-1">
          <div class="d-flex">
            <div class="av">
              <% if request.user.photo.attached? %>
                <%= cl_image_tag request.user.photo.key, class: "avatar-bordered" %>
              <% else %>
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/59/User-avatar.svg/2048px-User-avatar.svg.png" alt="avatar" class="me-2 avatar-bordered">
              <% end %>
            </div>

            <div class="names mx-2 text-white">
              <%= request.follower.first_name %>
              <%= request.follower.last_name %> <br>
              <%= request.follower.username %>
            </div>
          </div>
        </div>
        <div>
          <% if request.accepted != true %>
          <%= button_to "Accept", accept_friendship_path(request), method: :patch, class:"small-button-green m-2" %>
          <%= button_to "Reject", reject_friendship_path(request), method: :patch, class:"small-button-pink m-2"%>
          <% elsif request.accepted == true %>
          <%= button_to "Remove", reject_friendship_path(request), method: :patch, class:"small-button-red mx-2"%>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
</div>
