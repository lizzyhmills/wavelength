 <div class="d-none mt-3 container" data-friends-target="suggestions">
  <h2>Suggestions</h2>
    <div>
      <% @users.each do |user| %>
      <div class="d-flex mb-3">
        <div class="flex-grow-1">
          <div class="d-flex">
            <div class="av">
              <%= cl_image_tag user.photo.key, class: "avatar-bordered" %>
            </div>
            <div class="names mx-2">
              <%= user.first_name %>
              <%= user.last_name %> <br>
              <%= user.username %>
            </div>
          </div>
        </div>
        <div>
          <%= button_to "Add", user_friendships_path(user), method: :post, class:"small-button-pink mx-2" %>
        </div>
      </div>
      <% end %>
    </div>
</div>
