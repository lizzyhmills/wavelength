<div class="container">
  <h1 class="text-center">My Feed</h1>

  <% @posts.each do |post| %>

    <div class="post <%= post.user == current_user ? "current-user-post" : "other-user-post" %>">
      <div class="post-top d-flex align-items-center">
        <%= cl_image_tag post.user.photo.key, class: "avatar-bordered" %>
        <h3 class="username"><%= post.user.username %> </h3><br>
      </div>



        <div class="song-info">
           <div>
          <img src="<%= post.image_url %>" alt="" class="album-artwork">
          <i class="fa-solid fa-heart" id="heart-icon" style="color: #fafcff;"></i>
          <i class="fa-solid fa-comment" id="message-icon"></i>
          <i class="fa-solid fa-bookmark" id="save-icon"></i>
           </div>
          <div class="song-body-info">
          <h2><%= post.song_name.slice(0, 20) %></h2>
          <h3>By <%= post.artist %></h3>
          <p><%= post.caption.slice(0, 40) %>... </p>
          <i class="fa-solid fa-pen" id="edit-icon"></i>
          </div>
        </div>

    </div>
  <% end %>
  <% @myposts.each do |post| %>
    <div class="post <%= post.user == current_user ? "current-user-post" : "other-user-post" %>">
      <div class="post-top">
      <%= cl_image_tag post.user.photo.key, class: "avatar-bordered" %>
        <%= post.user.username %> <br>
      </div>
      <div class="song-info">
        <img src="<%= post.image_url %>" alt="" class="album-artwork">
        <em>Title:</em> <%= post.song_name %> <br>
        <em>Artist:</em> <%= post.artist %> <br>
        <em>Caption:</em> <%= post.caption.slice(0, 40) %>... <br>
      </div>
      <%= link_to "edit post", edit_post_path(post) %>
    </div>
    <% end %>

</div>
