  -webkit-backdrop-filter: grayscale(100%) blur(10px);
  backdrop-filter: grayscale(100%) blur(10px);
  min-height: 100vh;
  object-fit:fill;
  background-size: cover;
  background-repeat: no-repeat;
}


.bg-blur {
  min-height: 100vh;
  margin: 0;

}

