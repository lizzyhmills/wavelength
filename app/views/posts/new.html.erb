<div class="share-song-page">
  <div class="text-box">
    <h6 class="text-post-song">share</h6>
  </div>
  <div class="form-box-share">
    <%= simple_form_for [@post] do |f| %>
      <%= f.input :link,
        input_html: { style: "border-radius: 20px; height: 50px;" } %>

      <%= f.input :caption,
        input_html: { style: "border-radius: 20px; height: 150px;" } %>

      <div class="form-actions btn-center-share-song">
        <%= f.submit "share", class: "big-button-blue-black" %>
      </div>
    <% end %>
  </div>
</div>

<style>

