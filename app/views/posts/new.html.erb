  box-shadow: 4px 4px 0px 0px var(--BACKGROUND-PRIMARY-EMPHASIS);
  border-radius: 30px;
  color:#0c0c0c;
  margin: 0 auto;
  width: 340px;
  height: 100%;
  flex-shrink: 0;


  display: block;
  justify-content: center;
  align-items: center; /* Center horizontally */
  margin: 5% auto; /* 5% margin on top and bottom, auto margin left and right */
  padding: 6%;

}
.btn-center-share-song{
  display:flex;
   justify-content: center;
   padding: 22px 0 10px 0;
}

.text-post-song{
