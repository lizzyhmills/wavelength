<div class="page-login">
  <div class="form-box-login">
        <div class="text-box" >
        <h3 class="text-login">Log in</h3>
          </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", style: "border-radius: 20px; height: 45px;" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", style: "border-radius: 20px; height: 45px;" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions btn-center-login ">
            <%= f.button :submit, "Log in", class:" big-button-green" %>
          </div>
        <% end %>
        <div class="login-link-align">
        <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
<style>
.page-login{
  padding: 4%;
  margin: 0 auto;
}
.form-box-login{
   background-color: #E2E2E2;
  box-shadow: 4px 4px 0px 0px var(--BACKGROUND-SECONDARY-GREEN);
  border-radius: 30px;
  color:#0c0c0c;
  margin: 0 auto;
  width: 340px;
  height: 100%;
  flex-shrink: 0;


  display: block;
  justify-content: center;
  align-items: center; /* Center horizontally */
  margin: 5% auto; /* 5% margin on top and bottom, auto margin left and right */
  padding: 4%;

}


.btn-center-login{
  display:flex;
   justify-content: center;
   align-content:center;
   margin:40px auto 10px auto;
}

.text-login{
  display:flex;
  color: #0c0c0c;
  align-items: center;
  justify-content:center;
  margin:20px;

}
.login-link-align{
  margin:38px 1px 12px 15px;
}

</style>
