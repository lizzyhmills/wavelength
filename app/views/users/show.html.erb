<h2>My posts</h2>
<div class="show-page-background-pink">
  <% @posts.each do |post| %>
      <%= post.song_name %>
      <%= post.artist %>
  <% end %>
  <div class="arrow-right"><%= image_tag "arrow.svg" %></div>
</div>

<h2 class="mt-3">My love list</h2>
<div class="show-page-background-green">
  <% if @user == current_user %>
    <h2>My love list</h2>
      <% @favourite_posts.each do |post| %>
          <%= post.song_name %>
          <%= post.artist %>
      <% end %>
  <% end %>
  <div class="arrow-right"><%= image_tag "arrow.svg" %></div>
</div>

