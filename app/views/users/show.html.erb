<div class="title-and-filter">
  <div class="profile-title">
    <h3 class="mt-3">My posts</h3>
  </div>
  <div class="profile-filter">
    <%= image_tag "filter.svg" %>
  </div>
</div>

<div class="show-page-background-pink" data-controller="scroll">
  <div class="post-cards" data-scroll-target="cards">
    <% @posts.each do |post| %>
      <%= render 'shared/mini-card', post: post %>
    <% end %>
  </div>
  <div class="arrow-right"
    data-scroll-target="arrow"
    data-action="click->scroll#move"
    data-direction="right" data-distance="200">
    <%= image_tag "arrow.svg" %>
  </div>
</div>


<div class="title-and-filter">
  <div class="profile-title">
    <h3 class="mt-3">My love list</h3>
  </div>
  <div class="profile-filter">
    <%= image_tag "filter.svg" %>
  </div>
</div>

<div class="show-page-background-green">
  <% if @user == current_user %>
    <h2>My love list</h2>
      <% @favourite_posts.each do |post| %>
         <img src="<%= post.post.image_url %>" alt="" class="album-artwork">
          <%= post.post.song_name %>
          <%= post.post.artist %>
      <% end %>
  <% end %>
  <div class="arrow-right"><%= image_tag "arrow.svg" %></div>
</div>

<br>
<%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
