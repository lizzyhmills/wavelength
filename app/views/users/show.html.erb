<div class="top-center-text">
  <%= image_tag current_user.photo, class: "avatar-largest" %>
  <h3><%= current_user.username %></h3>
</div>

<div class="title-and-filter">
  <div class="profile-title">
    <h3 class="mt-3">My posts</h3>
  </div>
  <div class="profile-filter">
    <%= image_tag "filter.svg" %>
  </div>
</div>

<div class="show-page-background-pink">
  <div class="post-cards">
    <div id="carouselExample" class="carousel slide" data-bs-interval="false">
      <div class="carousel-inner">
        <% @posts.each do |post| %>
          <div class="carousel-item active">
            <img src="<%= post.image_url%>" class="d-block w-100 h-50" alt="...">
            <h3><%= post.song_name %></h3>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>






<br>
<%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
